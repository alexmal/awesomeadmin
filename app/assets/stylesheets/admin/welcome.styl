//= require ./styles/icons.css

@import "./styles/mixins"
@import "./styles/buttons"

#welcome-popup
	height 300px
	width 360px
	position absolute
	top 50%
	left 50%
	margin-top -150px
	margin-left -180px
	box-shadow(0 3px 16px #888)
	border-radius(4px)
	h2
		height 48px
		line-height 48px
		border 1px solid
		border-width 1px 0
		border-color white #C4C5C9
		font-size 24px
		color #666
		border-radius(4px 4px 0 0)
		btn-gradient(#FFFFFF, #F2F2F2, #E7E7E7, #E5E5E5)
	.btn
		margin 0 auto
		font-size 18px
		font-weight bold
		width 250px
		height 42px
		line-height 42px
		border-radius(4px)
	.main
		padding 30px
		background-color white
		border-radius(0 0 4px 4px)
	.inputs
		line-height 38px
		font-size 0
		margin-bottom 20px
		i
			font-size 16px
			width 36px
			height 38px
			color #BABABA
			display block
			line-height 38px
			position absolute
			left 0
			top 0
		input
			font-size 20px
			border 0
			width 252px
			height 38px
			color #646464
			padding 0 12px 0 34px
			background-color transparent
			border 1px solid #CDCDCF
			border-width 1px 1px 0
			background-color #F0F0F0
			transition(all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms)
			+ i
				transition(all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms)
		input:focus
			background-color white
			box-shadow(inset 0 0 12px #5EA4FF)
			+ i
				color #5EA4FF
		label
			display block
			height 38px
			position relative
		label + label input
			border-width 1px
		label:first-child input
			border-radius(4px 4px 0 0)
		label:last-child input
			border-radius(0 0 4px 4px)
	.inputs + div
		height 34px
		line-height 34px
		margin-bottom 16px