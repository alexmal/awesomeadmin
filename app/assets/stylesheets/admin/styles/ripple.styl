@import "mixins"

.ripple
	position absolute
	background-color rgba(255, 255, 255, 0.3)
	transition(unquote('opacity 2s cubic-bezier(0.23, 1, 0.32, 1) 0ms,transform 1s cubic-bezier(0.23, 1, 0.32, 1) 0ms'))
	transform(scale(0))
	border-radius(50%)
.ripple.scale
	opacity 0
	transform(scale(1))

.ripple-out
	position absolute
	width 300%
	height 300%
	left -150%
	top -150%
	margin-left 50%
	margin-top 50%
	border-radius(50%)
	transform(scale(0))
	transition(unquote('opacity 2s cubic-bezier(0.23, 1, 0.32, 1) 0ms,transform 1s cubic-bezier(0.23, 1, 0.32, 1) 0ms'))
.ripple-out.scale
	opacity 0
	transform(scale(1))