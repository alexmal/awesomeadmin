@import "mixins"

.dropdown
	position relative
	z-index 10
	> p
		position relative
		z-index 11
		cursor pointer
	> div
		position absolute
		left -1px
		right -1px
		background-color rgba(255, 255, 255, 0.9)
		margin-top 1px
		transition(.3s)
		> p
			padding-right 30px
			height 0
			line-height 34px
			overflow hidden
			text-align left
			position relative
			cursor pointer
			transition(.3s)
			> span
				color #333
				position relative
				transition(.3s)
		> p:before
			content ''
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			opacity 0
			transition(.3s)
		> p:hover
			background-color rgba(0, 0, 0, 0.07)
		> p:hover:before
			opacity 1
.dropdown.active
	> div
		box-shadow(0 0 16px #aaa)
		> p
			height 34px
			padding-left 30px
			border 1px solid #aaa
			border-top 0
		> p.active
			btn-gradient(#3DD5FF, #77E1FF, #00C7FF, #00BBF0)
			span
				color white
		> p:last-child
			border-radius(0 0 3px 3px)