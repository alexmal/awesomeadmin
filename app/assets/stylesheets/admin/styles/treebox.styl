@import "mixins"

.treebox
	cursor pointer
	position relative
	z-index 2 !important
	> .wrap
		background-color white
		top 100%
		left 0
		min-width 100%
		margin-left -1px
		max-height 600px
		overflow auto
		border 1px solid #ccc
		border-width 0 1px
		position absolute
		.wrap
			border 0 solid #ccc
			margin 0 20px
			border-width 0 1px
		.wrap:first-child
			margin-top -1px
	.wrap
		transition(.3s)
	.item
		height 0
		overflow hidden
		white-space nowrap
		text-align left
		border 0 solid #ccc
		font-size 0
		position relative
		transition(.3s)
		> *
			line-height 32px
			font-size 14px
			transition(.3s)
		span
			color #333 !important
			padding-right 12px
			transition(.3s)
		span + span
			border-left 1px solid #ccc
	i
		color #333 !important
		text-align center
		border-right 1px solid #bbb
		background-color #C0FFEE
		width 0
		overflow hidden
		font-size 16px !important
		position absolute
		box-shadow(inset 0 0 10px #87D5FD)
	i:hover, i.active
		color white !important
		background-color #00A8FF
		box-shadow(inset 0 0 10px #005AFF)
	.pick:hover, .pick.active
		background-color #00A8FF
		box-shadow(inset 0 0 10px #005AFF)
		span
			color white !important
	.group
		color white !important
		border-color #222 !important
		text-align center
		margin-bottom 0
		height 0
		overflow hidden
		position relative
		text-shadow(0 1px 3px black)
		btn-gradient(#777, #555, #333, #444)
		p
			position absolute
			left 0
			right 0
			padding 0 !important
			transition(.3s)
	.checkbox
		width 0
		position absolute
		left 0
		border-right 1px solid #bbb
		> div
			left 7px
.treebox.active
	z-index 3 !important
	> .wrap
		border-width 1px
.treebox.active > .wrap
	box-shadow(0 0 12px #aaa)
.treebox.active > .wrap, .treebox .open > .wrap
	> div > .item
		height 32px
		border-bottom-width 1px
		i, .checkbox
			width 32px
		span
			padding-left 12px
	> .group
		height 32px
		.checkbox
			width 32px
.treebox .wrap > .open
	padding-bottom 10px
	border-bottom 1px solid #ccc
	> .wrap
		margin-top 10px
		border-width 1px 1px 0