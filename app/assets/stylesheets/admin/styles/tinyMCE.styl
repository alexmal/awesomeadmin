@import "mixins"

#main
	.mce-tinymce
			margin 0
			border 0
		.mce-menubar
			border 0
		.mce-edit-area
			border 1px solid #ddd !important
		.mce-statusbar
			border-width 0 !important
		.mce-panel
			background transparent
		.mce-btn-group
			margin-right 10px
			.mce-btn
				background #fafafa
				margin-left 1px
				border 1px solid #ccc
				border-radius(2px)
				box-shadow(none)
				transition(.3s)
				button
					padding 5px 6px 6px
				.mce-caret
					margin-top 11px
					margin-right 3px
			.mce-btn.mce-active
				background white
				box-shadow(unquote('rgba(0, 0, 0, 0.1) 0px 1px 2px inset'))
				i
					color black
			.mce-btn:first-child
				margin-left 0
		.mce-ico
			padding 2px 3px
			width 16px
			height 17px
		.mce-menubtn
			span
				display inline-block
				height 23px
				line-height 24px
				padding-left 3px
			span:before
				content 'î‡µ'
				display inline-block
				font-family icomoon
				margin-right 3px
		.mce-toolbar-grp
			padding-bottom 15px
		.mce-menu
			border 0
			padding 0
			margin-top -1px
			background-color white
			border-radius(0)
		.mce-menu-item
			margin 0
			border 1px solid #ccc
			border-bottom-color transparent
			transition(.15s)
			.mce-text
				transition(.15s)
				font-size 14px !important
		.mce-menu-item:hover, .mce-menu-item.mce-selected, .mce-menu-item:focus, .mce-menu-item.mce-active
			background #435cdb
			border-color #2243ec
			box-shadow(inset 0 1px 6px #2243ec)
		.mce-menu-item.mce-active
			border 0
			.mce-text
				color white
		.mce-colorbutton .mce-preview
			left 40%
		.mce-floatpanel.mce-popover.mce-bottom.mce-start
			background-color white
			padding 5px
			height auto !important
		.mce-colorbutton-grid
			margin 0
		.mce-grid td.mce-grid-cell div
			border 0
			width 20px
			height 20px
			margin-bottom 1px
		.mce-grid-cell
			border 0 !important
		.mce-window
			background-color white
		.mce-path, .mce-resizehandle
			background-color #fafafa
			border 1px solid #ccc
			border-top 0
			padding 8px 20px
			margin 0
		.mce-i-resize
			margin-left -3px
		.mce-i-resize:before
			content '\e330'
			font-family icomoon